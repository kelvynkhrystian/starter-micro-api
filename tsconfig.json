{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node-cron"]
  },
  "include": [
    "src/**/*.ts",
    "src/config/models/index.ts",
    "src/config/config.ts"
  ],
  "exclude": ["node_modules"]
}
